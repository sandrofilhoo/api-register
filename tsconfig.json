{
    "compilerOptions": {
        "target": "ES2021",               
        "module": "CommonJS",            
        "strict": true,                  
        "esModuleInterop": true,         
        "outDir": "./dist",              
        "rootDir": ".",                  
        "skipLibCheck": true,            
        "moduleResolution": "node",     
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true 
    },
    "include": [
      "**/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }